<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Common header -->
        <include layout="@layout/monster_detail_header"/>

        <!-- Summary Section -->
        <LinearLayout
            android:orientation="horizontal"
            style="@style/list_item"
            android:layout_height="48dp"
            android:background="@color/subheading_color">

            <TextView
                android:id="@+id/quick_summary"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="Monster Summary"
                style="@style/text_medium"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/weaknesses"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            style="@style/list_item"
            android:minHeight="48dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/text_medium"
                android:text="Weaknesses"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/attacks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            style="@style/list_item"
            android:minHeight="48dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/text_medium"
                android:text="Attacks"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/earplugs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            style="@style/list_item"
            android:minHeight="48dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/text_medium"
                android:text="Earplugs"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/windpress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            style="@style/list_item"
            android:minHeight="48dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/text_medium"
                android:text="Windpress"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/trap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            style="@style/list_item"
            android:minHeight="48dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/text_medium"
                android:text="Trap"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/bombs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            style="@style/list_item"
            android:minHeight="48dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/text_medium"
                android:text="Bombs"/>
        </LinearLayout>


        <!-- Key Section -->
        <LinearLayout
            android:orientation="horizontal"
            style="@style/list_item"
            android:layout_height="48dp"
            android:background="@color/subheading_color">

            <TextView
                android:id="@+id/notes"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="Key"
                style="@style/text_medium"/>
        </LinearLayout>

    </LinearLayout>

</ScrollView>