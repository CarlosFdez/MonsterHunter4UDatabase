<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   	android:paddingLeft="10dp"
    android:baselineAligned="false" >

    <TableRow 
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".3"
            android:textStyle="bold"
            android:text="Name:"
            android:textColor="@color/primarytextcolor" />

        <TextView
            android:id="@+id/detail_weapon_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".7"
            android:textStyle="bold"
            android:textColor="@color/primarytextcolor" />

    </TableRow>

    <TableRow 
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".3"
            android:text="Type:"
            android:textColor="@color/primarytextcolor" />

        <TextView
            android:id="@+id/detail_weapon_type"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".7"
            android:textColor="@color/primarytextcolor" />
            
    </TableRow>

    <TableRow 
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".3"
            android:text="Attack:"
            android:textColor="@color/primarytextcolor" />

        <TextView
            android:id="@+id/detail_weapon_attack"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".7"
            android:textColor="@color/primarytextcolor" />
            
    </TableRow>

    <TableRow 
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".3"
            android:text="Element:"
            android:textColor="@color/primarytextcolor" />

        <TextView
            android:id="@+id/detail_weapon_element"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".7"
            android:textColor="@color/primarytextcolor" />
            
    </TableRow>

    <TableRow 
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".3"
            android:text="Sharpness:"
            android:textColor="@color/primarytextcolor" />

        <com.daviancorp.android.ui.general.DrawSharpness
            android:id="@+id/detail_weapon_blade_sharpness"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".7"
            android:layout_marginTop="2dp"
            android:layout_marginRight="5dp"/>
            
    </TableRow>

    <TableRow 
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".3"
            android:text="Rarity:"
            android:textColor="@color/primarytextcolor" />

        <TextView
            android:id="@+id/detail_weapon_rarity"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".7"
            android:textColor="@color/primarytextcolor" />
            
    </TableRow>

    <TableRow 
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".3"
            android:text="Slots:"
            android:textColor="@color/primarytextcolor" />

        <TextView
            android:id="@+id/detail_weapon_slot"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".7"
            android:textColor="@color/primarytextcolor" />
            
    </TableRow>

    <TableRow 
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".3"
            android:text="Affinity:"
            android:textColor="@color/primarytextcolor" />

        <TextView
            android:id="@+id/detail_weapon_affinity"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".7"
            android:textColor="@color/primarytextcolor" />
            
    </TableRow>

    <TableRow 
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".3"
            android:text="Defense:"
            android:textColor="@color/primarytextcolor" />

        <TextView
            android:id="@+id/detail_weapon_defense"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".7"
            android:textColor="@color/primarytextcolor" />
            
    </TableRow>

    <TableRow 
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/detail_weapon_blade_special"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".3"
            android:textColor="@color/primarytextcolor" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight=".7" >

            <ImageView
                android:id="@+id/detail_weapon_blade_note1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp" />

            <ImageView
                android:id="@+id/detail_weapon_blade_note2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp" />

            <ImageView
                android:id="@+id/detail_weapon_blade_note3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp" />

            <TextView
                android:id="@+id/detail_weapon_blade_special_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/primarytextcolor" />
        </LinearLayout>
            
    </TableRow>

    <TableRow 
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".3"
            android:text="Creation Cost:"
            android:textColor="@color/primarytextcolor" />

        <TextView
            android:id="@+id/detail_weapon_creation"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".7"
            android:textColor="@color/primarytextcolor" />
            
    </TableRow>

    <TableRow 
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".3"
            android:text="Upgrade Cost:"
            android:textColor="@color/primarytextcolor" />

        <TextView
            android:id="@+id/detail_weapon_upgrade"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".7"
            android:textColor="@color/primarytextcolor" />
            
    </TableRow>

</TableLayout>