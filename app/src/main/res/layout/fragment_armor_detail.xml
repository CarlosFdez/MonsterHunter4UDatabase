<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp" >

        <ImageView
            android:id="@+id/detail_armor_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginRight="10dp" >
        </ImageView>

        <TextView
            android:id="@+id/detail_armor_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:paddingLeft="10dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/primarytextcolor">
        </TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".4"
            android:orientation="vertical"
            android:paddingLeft="10dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Part:"
                android:textColor="@color/primarytextcolor" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Defense:"
                android:textColor="@color/primarytextcolor" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Slot:"
                android:textColor="@color/primarytextcolor" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rare:"
                android:textColor="@color/primarytextcolor" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Buy:"
                android:textColor="@color/primarytextcolor" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/primarytextcolor" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fire Res:"
                android:textColor="@color/primarytextcolor" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Water Res:"
                android:textColor="@color/primarytextcolor" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ice Res:"
                android:textColor="@color/primarytextcolor" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thunder Res:"
                android:textColor="@color/primarytextcolor" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dragon Res:"
                android:textColor="@color/primarytextcolor" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".6"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/part"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/primarytextcolor" />

            <TextView
                android:id="@+id/defense"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/primarytextcolor" />

            <TextView
                android:id="@+id/slot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/primarytextcolor" />

            <TextView
                android:id="@+id/rare"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/primarytextcolor" />

            <TextView
                android:id="@+id/buy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/primarytextcolor" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/primarytextcolor" />

            <TextView
                android:id="@+id/fire_res"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/primarytextcolor" />

            <TextView
                android:id="@+id/water_res"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/primarytextcolor" />

            <TextView
                android:id="@+id/ice_res"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/primarytextcolor" />

            <TextView
                android:id="@+id/thunder_res"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/primarytextcolor" />

            <TextView
                android:id="@+id/dragon_res"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/primarytextcolor" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>