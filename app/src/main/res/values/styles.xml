<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.


    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.


           -->


    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:textColor">@color/text_color</item>
        <item name="android:windowBackground">@color/background_color</item>

        <item name="android:actionBarStyle">@style/ActionBar</item>
        <item name="actionBarStyle">@style/ActionBar</item>

        <item name="android:colorPrimary">@color/primary_color</item>
        <item name="android:colorPrimaryDark">@color/dark_primary_color</item>
        <item name="android:colorAccent">@color/accent_color</item>

        <item name="android:clipToPadding">false</item>

        <item name="actionBarTabStyle">@style/MyActionBarTabs</item>
    </style>

    <!-- ActionBar Tab styles -->
    <style name="MyActionBarTabs"
        parent="@style/Widget.AppCompat.ActionBar.TabView">
        <item name="android:background">@drawable/action_bar_tab_indicator</item>
    </style>


    <!-- ActionBar styles -->
    <style name="ActionBar" parent="Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/primary_color</item>
        <item name="background">@color/primary_color</item>
    </style>

    <!-- Begin styles for lists -->

    <style name="list" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:id">@android:id/list</item>
        <item name="android:divider">@color/divider_color</item>
        <item name="android:dividerHeight">1dp</item>
        <item name="android:cacheColorHint">@android:color/transparent</item>
        <item name="android:persistentDrawingCache">scrolling</item>
        <item name="android:scrollingCache">false</item>
    </style>

    <style name="expandable_list" parent="@style/list">
        <item name="android:groupIndicator">@null</item>
    </style>

    <style name="expandable_group" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="android:layout_height">32dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:background">@color/primary_color</item>

        <item name="android:paddingLeft">64dp</item>

    </style>

    <style name="list_item" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="android:background">@drawable/clicked_states_white</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
    </style>

    <style name="text_medium" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">18sp</item>
        <item name="android:typeface">sans</item>
    </style>

    <style name="text_medium_alt" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textColor">@color/text_primary_color</item>
        <item name="android:textSize">18sp</item>
        <item name="android:typeface">sans</item>
    </style>

    <style name="text_small" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">14sp</item>
        <item name="android:typeface">sans</item>
    </style>

    <style name="main_image" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="android:layout_height">32dp</item>
        <item name="android:layout_width">32dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="small_image" parent="@style/main_image">
        <item name="android:layout_height">24dp</item>
        <item name="android:layout_width">24dp</item>
    </style>

    <!-- End styles for elevated lists -->

</resources>